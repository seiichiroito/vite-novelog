rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /novels/{docId} {
      allow read;
      allow create, update: if request.auth != null;
    }
    match /rooms/{docId} {
      allow read;
      allow create, update: if request.auth != null;
    }
    match /users/{docId} {
      allow read;
      allow update: if  request.auth != null;
    }
    match /characters/{docId} {
      allow read;
      allow create, udpate: if request.auth != null;
    }
  }
}